#app
  .zhibo8-content
    padding:90px 0 50px 0
  .footer
    position fixed;
    height: 50px;
    width: 100%
    bottom: 0
    left: 0
    background-color #ffffff
    border-top: 1px solid rgba(7,17,27,.2)
    ul
      list-style none
      height: 50px
      li
        width:20%
        float: left
        padding-top:8px
        text-align center
        &.active
          color: #33ccff
        a
          color: #999
          text-decoration none
          &.router-link-active
            color: #33ccff
          i
            display: block
            font-size 16px
          span
            font-size 12px
      .blank
        height: 0
        line-height 0
        font-size 0px
        margin: 0
        padding: 0
        clear: both
        visibility: hidden
