.header
  position: fixed;
  top: 0
  left: 0
  width: 100%
  height: 60px
  background-color #33ccff
  color: #ffffff
  z-index:100
  .header-content
    display: flex
    line-height 60px
    .user-logo
      flex: 1
      text-align left
      img
        width: 30px
        height: 30px
        border-radius 50%
        vertical-align middle
        margin-left: 10px
    .title
      flex: 1
      text-align center
      font-size: 20px
    .shop
      flex: 1
      text-align right
      .fa
        margin-right: 10px
        font-size 20px
    .repeat
      flex: 1
      text-align right
      font-size: 12px
      color: #ffffff
      .repeat-inner
        border 2px solid #ffffff

