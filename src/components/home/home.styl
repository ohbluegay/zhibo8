.home
  &.overflow
    hidden
  .home-slide
    background-color #ffffff
    height: 30px
    line-height 30px
    font-size 14px
    color: #333
    white-space nowrap
    overflow-x auto
    position fixed
    width: 100%
    left: 0
    top: 60px
    z-index 99
    a
      color: #333
      span
        display inline-block
        width: 66px
        text-align center
        position: relative
      &.router-link-active
        span
          color: #3cf
        span:
        :after
          position absolute
          content: ''
          bottom 0px
          left: 13px
          width: 40px
          border-bottom 3px solid #3cf

  .new-detail
    position fixed
    overflow-y auto
    background-color #ffffff
    width: 100%
    height: 100%
    top: 0
    left: 0
    z-index: 9999
    &.detailIn-enter-active
      animation slideIn .3s
    &.detailIn-leave-active
      animation slideOut .3s
    @keyframes slideIn {
      0% {
        transform translate3d(100%, 0, 0)
      }
      100% {
        transform translate3d(0, 0, 0)
      }
    }
    @keyframes slideOut {
      0% {
        transform translate3d(0, 0, 0)
      }
      100% {
        transform translate3d(100%, 0, 0)
      }
    }
    .d-main
      margin-top: 60px
      padding 15px 10px
      .d-title
        font-size 16px
      .d-tips
        font-size: 12px
        color: #999
        padding: 5px 0
      .d-bar
        img
          width: 100%
          border-radius 3px
      .d-detail
        font-size 14px
        color: #000
        text-indent 2em
      .author
        text-indent 2em
        font-size: 14px
        float: right
        margin: 10px 0 20px 0

    .ob
      margin-top: 60px
      display: flex
      .ob-tab
        flex: 0 0 70px
        font-size: 14px
        ul
          list-style none
          li
            height: 40px
            line-height 40px
            text-align center
            background-color #f9f9f9
            &.li-active
              color: rgb(0, 160, 220)
              background-color #ffffff
      .ob-content
        flex: 1
        ul
          padding: 0 10px
          li
            border-bottom 1px solid #f0f0f0
            display flex
            padding 5px 0
            .ob-item-left
              flex: 1
              img
                width: 30px
                height: 30px
                vertical-align super
              div
                display inline-block
                span
                  display block
                  font-size 12px
                  color: #666
                  &.tname
                    font-size 14px
                    color: #333
            .ob-item-right
              span
                margin-top: 15px
                display: inline-block;
                font-size 12px
                padding: 3px 8px
                border-radius 5px
                &.obed
                  border: 1px solid #f0f0f0
                &.toob
                  color: rgb(0,160,220)
                  border: 1px solid rgb(0,160,220)




