.news
  min-height 530px
  .top-menu
    white-space nowrap
    height: 30px
    border-bottom 1px solid rgba(7,17,27,.1)
    font-size 12px
    line-height 30px
    overflow-x auto
    span
      display inline-block
      width: 60px
      text-align: center
      color: #333
      &.new-active
        color: #3cf
  .news-ball
    .newsItem
      display flex
      padding 10px
      border-1px(#f0f0f0)
      bg-color(#fff)
      .img-content
        flex: 1
        img
          width: 100%
          height: 60px
      .text-content
        flex: 3
        padding-left: 10px
        position relative
        .main-content
          font-size 14px
          color: #000
        .createTime
          color: #666
          font-size 12px
          position absolute
          left: 10px
          bottom 0
        .repeat
          position absolute
          bottom: 0
          right: 0
          font-size: 12px
          color: #666
    .news-mask
      position absolute
      width: 100%
      height: 100%
      left: 0
      top: 0
      background-color #ffffff
      z-index: 101
    .loading
      text-align center
      padding: 10px 0
      span
        display: inline-block
        color: #666666
        font-size 14px
      .loading-text
        vertical-align super
        margin-left: 10px
